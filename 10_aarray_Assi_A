function fruits() {
    var arraysFruits = ["Banana","Orange","Apple","Mango","Water Melon"];
    for (var i = 0; i <arraysFruits.length; i++) {
        if (arraysFruits[i] ==="Mango" ) {
            var spliced = arraysFruits.splice(i, 1);
            console.log(" elements: " + arraysFruits);
        }
    }
}
fruits();
