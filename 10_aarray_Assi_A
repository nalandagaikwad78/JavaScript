const arraysFruits = ["Banana","Orange","Apple","Mango","Water Melon"];
const index = arraysFruits.indexOf("Orange"); 
if (index !== -1) {
    arraysFruits[index] = "Kiwi";
}
console.log(arraysFruits); 
